.localization_top_left {
    width: 79px;
}

.localization_top_left .country-selector {
    left: 0;
    width: auto;
    right: auto;
}

.js .header-localization.localization_top_left .localization-form__select {
    height: auto;
    gap: 10px;
    padding: 0;
    font-size: var(--body-sm);
    font-weight: 400;
    line-height: 135%;
}

.js .header-localization.localization_top_left span {
    text-decoration: underline;
    text-underline-offset: 2px;
}

@media screen and (min-width: 990px) {
    .search-modal__form {
        width: 100%;
        max-width: 100%;
    }

    .search-modal__form .field{
        max-width: 714px;
        max-width: 100%;
    }
}