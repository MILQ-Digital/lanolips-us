.localization_top_left {
    width: 79px;
}

.localization_top_left .country-selector {
    left: 0;
    width: auto;
    right: auto;
    /*padding: 0 10px 0 29px;*/
    padding: 0 10px 0 10px;
    box-shadow: unset;
    border: 0;
    border-radius: 4px;
    animation: unset;
}

.localization_top_left .country-selector a,
.localization_top_left  .disclosure {
    text-decoration: none;
    font-size: var(--body-sm);
    font-weight: 400;
    line-height: 135%;
    color: var(--Lano-Blue);
}

.js .header-localization.localization_top_left .localization-form__select {
    height: auto;
    gap: 10px;
    padding: 0;
    font-size: var(--body-sm);
    font-weight: 400;
    line-height: 135%;
}

.header-localization.localization_top_left .localization-form__select:after {
    border: 0;
}

.js .header-localization.localization_top_left span,
.localization_top_left .country-selector a:hover,
.localization_top_left .country-selector a.local-active {
    text-decoration: underline;
    text-underline-offset: 2px;
}

.header-localization.localization_top_left .country-selector__list--with-multiple-currencies {
    width: auto;
    min-width: auto;
}

@media screen and (min-width: 990px) {
    .search-modal__form {
        width: 100%;
        max-width: 100%;
    }

    .search-modal__form .field{
        max-width: 714px;
        margin: 0 auto 35px;
    }

    .search-modal__content {
        padding: 0;
    }

    .predictive-search.predictive-search--header {
        width: 100vw;
        left: 0;
        right: 0;
    }

    .predictive-search__results-list.grid  .grid__item {
        width: calc(33.33% - var(--grid-desktop-horizontal-spacing)* 2 / 3);
        max-width: calc(33.33% - var(--grid-desktop-horizontal-spacing) / 3);
    }
}

.predictive-search--empty {
    display: block;
    width: 100vw;
}

